JanelaManage:
    JanelaLogin:
        name: 'login'
    JanelaPrincipal:
        name: 'principal'

<JanelaLogin>:

    FloatLayout:
        MDToolbar:
            pos_hint: {"top": 1}
            elevation: 0

        Image:
            source: 'loginIcon.png'
            size_hint: (0.5, 0.5)
            pos_hint: {'center_x': 0.5, 'center_y': 0.83}

        MDLabel:
            text: 'Bem vindo!'
            font_style: 'H5'
            bold: True
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.68}

        MDLabel:
            text: 'Faça login para continuar'
            font_style: 'Caption'
            bold: True
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.64}

        MDTextField:
            id: user
            hint_text: 'Usuário'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint_x: .8
            icon_right: 'account'
            icon_right_color: app.theme_cls.primary_color


        MDTextField:
            id: password
            hint_text: 'Senha'
            pos_hint: {'center_x': 0.5, 'center_y': 0.42}
            size_hint_x: .8
            password: True
            icon_right: 'lock'
            icon_right_color: app.theme_cls.primary_color

        MDRaisedButton:
            text: "Entrar"
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            on_release: app.isAuthenticated()

        MDLabel:
            id: msg
            text: ''
            color: 1,0,0,1
            font_style: 'Caption'
            bold: True
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.22}

        Image:
            source: 'logo.png'
            size_hint: (0.6, 0.6)
            pos_hint: {'center_x': 0.5, 'center_y': 0.08}




<JanelaPrincipal>:

    FloatLayout:
        MDToolbar:
            md_bg_color: 1,1,0,0.99
            title: "Menu Vendas"
            pos_hint: {"top": 1}
            elevation: 0
            right_action_items: [["account-check"]]


        MDIconButton:
            icon: "arrow-left-bold-circle"
            pos_hint: {'center_x': 0.95, 'center_y': 0.022}
            theme_text_color: "Custom"
            text_color:  app.theme_cls.primary_color
            on_release: app.returnLogin()

        MDLabel:
            id: id_nome
            text: ""
            halign: "center"
            pos_hint: {'center_y': 0.022}
            font_style: 'Caption'
            color: (182/255, 66/255, 245/255, 1)


        MDRaisedButton:
            text: "Cadastrar Venda"
            pos_hint: {'center_x': 0.5, 'center_y': 0.15}
