#:import toast kivymd.toast.toast
JanelaManage:
    JanelaLogin:
        name: 'login'
    JanelaPrincipal:
        name: 'principal'
    JanelaSucesso:
        name: 'sucesso'

<JanelaLogin>:

    FloatLayout:
        MDToolbar:
            pos_hint: {"top": 1}
            elevation: 0

        Image:
            source: 'images/loginIcon.png'
            size_hint: (0.5, 0.5)
            pos_hint: {'center_x': 0.5, 'center_y': 0.83}

        MDLabel:
            text: 'Bem vindo!'
            font_style: 'H5'
            bold: True
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.68}

        MDLabel:
            text: 'Faça login para continuar'
            font_style: 'Caption'
            bold: True
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.64}

        MDTextField:
            id: user
            hint_text: 'Usuário'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint_x: .8
            icon_right: 'account'
            icon_right_color: app.theme_cls.primary_color


        MDTextField:
            id: password
            hint_text: 'Senha'
            pos_hint: {'center_x': 0.5, 'center_y': 0.42}
            size_hint_x: .8
            password: True
            icon_right: 'lock'
            icon_right_color: app.theme_cls.primary_color

        MDRaisedButton:
            text: "Entrar"
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            on_release: app.isAuthenticated()

        MDLabel:
            id: msg
            text: ''
            color: 1,0,0,1
            font_style: 'Caption'
            bold: True
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.22}

        Image:
            source: 'images/logo.png'
            size_hint: (0.6, 0.6)
            pos_hint: {'center_x': 0.5, 'center_y': 0.08}




<JanelaPrincipal>:

    FloatLayout:
        MDToolbar:
            md_bg_color: 1,1,0,0.99
            title: "Menu Vendas"
            pos_hint: {"top": 1}
            elevation: 0
            right_action_items: [["account-check"]]


        MDIconButton:
            icon: "arrow-left-bold-circle"
            pos_hint: {'center_x': 0.95, 'center_y': 0.022}
            theme_text_color: "Custom"
            text_color:  app.theme_cls.primary_color
            on_release: app.returnLogin()

        MDLabel:
            id: id_nome
            text: ""
            halign: "center"
            pos_hint: {'center_y': 0.022}
            font_style: 'Caption'
            color: (182/255, 66/255, 245/255, 1)

        MDRectangleFlatIconButton:
            icon: "candycane"
            id: drop_itemSab
            pos_hint: {'center_x': 0.5, 'center_y': 0.75}
            size_hint: (0.95, 0.15)
            text: 'Escolha o sabor'
            line_color: [1,0,1,1]
            on_release: app.menuSab.open()

        MDRectangleFlatIconButton:
            icon: "math-integral"
            id: drop_itemQtd
            pos_hint: {'center_x': 0.5, 'center_y': 0.55}
            size_hint: (0.95, 0.15)
            text: 'Escolha a quantidade'
            line_color: [1,0,1,1]
            on_release: app.menuQtd.open()

        MDRectangleFlatIconButton:
            icon: "credit-card"
            id: drop_itemPag
            pos_hint: {'center_x': 0.5, 'center_y': 0.35}
            size_hint: (0.95, 0.15)
            text: 'Escolha a forma de pagamento'
            line_color: [1,0,1,1]
            on_release: app.menuPag.open()

        MDRaisedButton:
            text: "Cadastrar Venda"
            pos_hint: {'center_x': 0.5, 'center_y': 0.12}
            on_release: app.cadastrarVenda()

        MDLabel:
            id: aviso
            text: ""
            halign: "center"
            pos_hint: {'center_y': 0.21}
            font_style: 'Caption'
            bold: True
            color: (1, 0, 0, 1)


<JanelaSucesso>:

    FloatLayout:
        MDToolbar:
            md_bg_color: 1,1,0,0.99
            title: "Sucesso!"
            pos_hint: {"top": 1}
            elevation: 0
            right_action_items: [["account-check"]]

        Image:
            source: 'images/joia.jpg'
            size_hint: (0.7, 0.7)
            pos_hint: {'center_x': 0.5, 'center_y': 0.72}

        MDIconButton:
            icon: "arrow-left-bold-circle"
            pos_hint: {'center_x': 0.95, 'center_y': 0.022}
            theme_text_color: "Custom"
            text_color:  app.theme_cls.primary_color
            on_release: app.returnLogin()

        MDLabel:
            id: id_nome2
            text: ""
            halign: "center"
            pos_hint: {'center_y': 0.022}
            font_style: 'Caption'
            color: (182/255, 66/255, 245/255, 1)

        MDLabel:
            text: "Venda cadastrada com sucesso!!!"
            bold: True
            halign: "center"
            font_style: 'H5'
            theme_text_color: "Custom"
            text_color: 182/255, 66/255, 245/255, 1

        MDIcon:
            icon: "check-bold"
            font_size: 75
            halign: "center"
            pos_hint: {"center_x": .5, "center_y": .38}
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color

        MDRaisedButton:
            text: "Nova Venda"
            text_color: 0,1,0.5,1
            bold: True
            font_style: 'H6'
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            size_hint: (0.85, 0.08)
            on_release: app.novaVenda()

